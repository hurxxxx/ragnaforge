# Include license and documentation
include LICENSE
include README.md
include TODO.md
include Introduce.md

# Include configuration files
include .env.example
include requirements.txt
include pyproject.toml

# Include test scripts
include test_complete_pipeline.sh
include test_comprehensive_search_test.sh

# Include sample documents (optional)
recursive-include sample_docs *.pdf

# Include package data
recursive-include services *.py
recursive-include routers *.py

# Exclude development and cache files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude *.so
global-exclude *.dylib

# Exclude data directories
prune data/
prune models/
prune temp_processing/
prune logs/

# Exclude IDE files
prune .vscode/
prune .idea/
global-exclude *.swp
global-exclude *.swo
global-exclude *~
